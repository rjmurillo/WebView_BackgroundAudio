<Page
    x:Class="BackgroundAudio.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BackgroundAudio"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Unload" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonUnload_Click" Grid.Row="1"/>
        <Button Content="Load" HorizontalAlignment="right" VerticalAlignment="Top" Click="ButtonLoad_Click" Grid.Row="1" />
    </Grid>
</Page>
